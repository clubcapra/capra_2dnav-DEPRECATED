<launch>
  <master auto="start"/>

  <include file="$(find capra_2dnav)/launch/gmapping.launch" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find capra_2dnav)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find capra_2dnav)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find capra_2dnav)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find capra_2dnav)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find capra_2dnav)/config/base_local_planner_params.yaml" command="load" />
    <remap from="cmd_vel" to="/smartmotor/cmd_vel" />
  </node>
</launch>